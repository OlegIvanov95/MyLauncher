<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" tools:context=".MainActivity"
    android:background="@color/MainBackground">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:divider="@drawable/separator"
        android:dividerPadding="3dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:id="@+id/linearLayout2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="@string/ButtonApplicationText"
            android:layout_weight="1"
            android:id="@+id/applications"
            android:background="@color/MainBackground"
            android:textColor="@color/ActiveActivity" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="@string/ButtonSettingsText"
            android:layout_weight="1"
            android:id="@+id/settings"
            android:background="@color/MainBackground"
            android:onClick="onClick" />

    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/tableLayout"
        android:padding="5dp">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:layout_width="@dimen/SquareSide"
                android:layout_height="@dimen/SquareSide"
                android:id="@+id/opera"
                android:background="@drawable/opera"
                android:text="Opera"
                android:textSize="@dimen/IconFont"
                android:textColor="@color/IconTextColor"
                android:gravity="center|bottom"
                android:width="@dimen/SquareSide"
                android:layout_margin="@dimen/IconMargin"
                android:onClick="onClick" />
            <Button
                android:layout_width="@dimen/SquareSide"
                android:layout_height="@dimen/SquareSide"
                android:id="@+id/youtube"
                android:background="@drawable/youtube"
                android:text="Youtube"
                android:textSize="@dimen/IconFont"
                android:textColor="@color/IconTextColor"
                android:gravity="center|bottom"
                android:width="@dimen/SquareSide"
                android:layout_margin="@dimen/IconMargin"
                android:onClick="onClick" />
            <Button
                android:layout_width="@dimen/SquareSide"
                android:layout_height="@dimen/SquareSide"
                android:id="@+id/dropbox"
                android:background="@drawable/dropbox"
                android:text="DropBox"
                android:textSize="@dimen/IconFont"
                android:textColor="@color/IconTextColor"
                android:gravity="center|bottom"
                android:width="@dimen/SquareSide"
                android:layout_margin="@dimen/IconMargin"
                android:onClick="onClick" />
            <Button
                android:layout_width="@dimen/SquareSide"
                android:layout_height="@dimen/SquareSide"
                android:id="@+id/coolreader"
                android:background="@drawable/coolreader"
                android:text="Cool Reader"
                android:textSize="@dimen/IconFont"
                android:textColor="@color/IconTextColor"
                android:gravity="center|bottom"
                android:width="@dimen/SquareSide"
                android:layout_margin="@dimen/IconMargin"
                android:onClick="onClick" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
